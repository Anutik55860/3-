def check_ordered_sequence(k):
    digit_1 = K // 100
    digit_2 = (K % 100) //10
    digit_3 = K % 10
    
    if digit_1 <  digit_2 < digit_3 or digit_1 > digit_2 > digit_3:
        return "цифры числа образуют упорядоченную последовательность"
    else:
        return "цифры числа не образуют упорядоченную последовательность"
K= 678
result = check_ordered_sequence(K)
print(result)


